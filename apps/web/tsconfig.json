{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@coreloops-components/*": [
        "./src/components/*"
      ],
      "@coreloops-ui/*": [
        "./src/components/ui/*"
      ],
      "@coreloops/shared-types": ["../../libs/shared-types/src"],
      "@coreloops/data-access-layer": ["../../libs/data-access-layer/src"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "../../dist/apps/web/.next/types/**/*.ts",
    "../../dist/apps/web/types/**/*.ts",
    "../../dist/dist/apps/web/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../libs/shared-types/src"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
