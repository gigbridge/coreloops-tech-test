{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "ESNext",
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "resolveJsonModule": true
  },
  "include": [
    "./src/app/templates/*.json",
    "./src/**/*.ts",
    "../../libs/shared-types",
    "../../libs/data-access-layer"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
